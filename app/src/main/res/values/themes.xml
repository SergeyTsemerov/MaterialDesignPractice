<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesignPractice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="counterOverflowTextColor">@color/red_A700</item>
        <item name="boxStrokeColor">@color/teal50_600</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="helperText">@string/wiki_helper_text</item>
        <item name="android:hint">@string/search_wiki</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="boxBackgroundColor">@color/blue_gray_100</item>
    </style>

    <style name="MyBottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/blue_gray_500</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="fabAlignmentMode">end</item>
    </style>

    <style name="Theme.MaterialDesignPractice.MyThemeNumber1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_gray_500</item>
        <item name="colorSecondary">@color/gray_700</item>
    </style>

</resources>